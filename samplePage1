    <script>
        // OTP Verification
        document.getElementById('otpForm').addEventListener('submit', function(e) {
            e.preventDefault();
            document.getElementById('otpSection').classList.add('hidden');
            document.getElementById('policyHolderSection').classList.remove('hidden');
        });

        // Proceed to Claim Form
        document.getElementById('proceedToClaim').addEventListener('click', function() {
            document.getElementById('policyHolderSection').classList.add('hidden');
            document.getElementById('formHeader').classList.remove('hidden');
            document.getElementById('claimFormContainer').classList.remove('hidden');
        });

        // Claim Form Submission
        document.getElementById('claimForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Show success message
            document.getElementById('successMessage').classList.remove('hidden');
            
            // Reset form after 3 seconds
            setTimeout(() => {
                this.reset();
                document.getElementById('successMessage').classList.add('hidden');
            }, 3000);
        });

        // Resend OTP
        document.getElementById('resendOtp').addEventListener('click', function() {
            alert('OTP has been resent to your mobile number');
        });

        // Initialize form state
        document.getElementById('claimFormContainer').classList.add('hidden');

        document.querySelectorAll('input[name="anotherVehicle"]').forEach((elem) => {
            elem.addEventListener("change", function() {
                document.getElementById("thirdPartyDetails").classList.toggle("hidden", this.value !== "yes");
            });
        });
    
        document.querySelectorAll('input[name="vehicleTowed"]').forEach((elem) => {
            elem.addEventListener("change", function() {
                document.getElementById("garageDetails").classList.toggle("hidden", this.value !== "yes");
            });
        });

        document.getElementById("repairType").addEventListener("change", function () {
            const garageSelection = document.getElementById("garageSelection");
            const repairCostSection = document.getElementById("repairCostSection");
            const repairEstimateSection = document.getElementById("repairEstimateSection");
    
            if (this.value === "cashless") {
                garageSelection.classList.remove("hidden");
                repairCostSection.classList.add("hidden");
                repairEstimateSection.classList.add("hidden");
            } else if (this.value === "reimbursement") {
                garageSelection.classList.add("hidden");
                repairCostSection.classList.remove("hidden");
                repairEstimateSection.classList.remove("hidden");
            } else {
                garageSelection.classList.add("hidden");
                repairCostSection.classList.add("hidden");
                repairEstimateSection.classList.add("hidden");
            }
        });

        document.getElementById("repairType").addEventListener("change", function () {
            const garageSelection = document.getElementById("garageSelection");
            const repairCostSection = document.getElementById("repairCostSection");
            const repairEstimateSection = document.getElementById("repairEstimateSection");
            const bankDetailsSection = document.getElementById("bankDetailsSection");
    
            if (this.value === "cashless") {
                garageSelection.classList.remove("hidden");
                repairCostSection.classList.add("hidden");
                repairEstimateSection.classList.add("hidden");
                bankDetailsSection.classList.add("hidden");
            } else if (this.value === "reimbursement") {
                garageSelection.classList.add("hidden");
                repairCostSection.classList.remove("hidden");
                repairEstimateSection.classList.remove("hidden");
                bankDetailsSection.classList.remove("hidden");
            } else {
                garageSelection.classList.add("hidden");
                repairCostSection.classList.add("hidden");
                repairEstimateSection.classList.add("hidden");
                bankDetailsSection.classList.add("hidden");
            }
        });
        
    </script>
</body>
</html>